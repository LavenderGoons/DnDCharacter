<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lavendergoons.dndcharacter.Fragments.SpellFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/activity_half_horizontal_margin">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:text="@string/hint_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spellNameLabel"
                android:layout_weight="2" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="@string/hint_name"
                android:ems="10"
                android:id="@+id/spellNameEdit"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:text="@string/hint_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spellLevelLabel"
                android:layout_weight="2" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="@string/hint_level"
                android:ems="10"
                android:id="@+id/spellLevelEdit"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:text="@string/spell_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spellTypeLabel"
                android:layout_weight="2" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="@string/spell_type"
                android:ems="10"
                android:id="@+id/spellTypeEdit"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:text="@string/spell_component"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spellComponentLabel"
                android:layout_weight="2" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="@string/spell_component"
                android:ems="10"
                android:id="@+id/spellComponentEdit"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:text="@string/spell_cast_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spellCastTimeLabel"
                android:layout_weight="2" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="@string/spell_cast_time"
                android:ems="10"
                android:id="@+id/spellCastTimeEdit"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:text="@string/gen_range"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spellRangeLabel"
                android:layout_weight="2" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="@string/gen_range"
                android:ems="10"
                android:id="@+id/spellRangeEdit"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:text="@string/spell_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spellAreaLabel"
                android:layout_weight="2" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="@string/spell_area"
                android:ems="10"
                android:id="@+id/spellAreaEdit"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:text="@string/gen_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spellDurationLabel"
                android:layout_weight="2" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="@string/gen_duration"
                android:ems="10"
                android:id="@+id/spellDurationEdit"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:text="@string/spell_saving_throw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spellSavingThrowLabel"
                android:layout_weight="2" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="@string/spell_saving_throw"
                android:ems="10"
                android:id="@+id/spellSavingThrowEdit"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Switch
                android:text="@string/spell_resistance"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/spellResSwitch"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:maxLines="5"
            android:hint="@string/notes"
            android:ems="10"
            android:id="@+id/spellNotesEdit"
            android:gravity="top"
            android:scrollbars="vertical"/>
    </LinearLayout>
    </LinearLayout>
</ScrollView>