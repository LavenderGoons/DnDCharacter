<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingEnd="@dimen/activity_half_horizontal_margin">

            <TextView
                android:text="@string/hint_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/abilityNameLabel"
                android:gravity="center_horizontal" />

            <TextView
                android:text="@string/ability_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/abilityModStr"
                android:layout_weight="1"
                android:gravity="center_vertical" />
            <TextView
                android:text="@string/ability_dex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/abilityModDex"
                android:layout_weight="1"
                android:gravity="center_vertical" />
            <TextView
                android:text="@string/ability_con"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/abilityModCon"
                android:layout_weight="1"
                android:gravity="center_vertical" />
            <TextView
                android:text="@string/ability_int"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/abilityModInt"
                android:layout_weight="1"
                android:gravity="center_vertical" />
            <TextView
                android:text="@string/ability_wis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/abilityModWis"
                android:layout_weight="1"
                android:gravity="center_vertical" />
            <TextView
                android:text="@string/ability_cha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/abilityModCha"
                android:layout_weight="1"
                android:gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="@string/gen_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:layout_weight="1"
                android:gravity="center_horizontal" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:text="00"
                android:ems="3"
                android:id="@+id/abilityStrScoreEdit"
                android:layout_weight="1"
                android:textSize="14sp"
                android:gravity="center_vertical|center_horizontal"
                android:selectAllOnFocus="true"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:text="00"
                android:ems="3"
                android:id="@+id/abilityDexScoreEdit"
                android:layout_weight="1"
                android:textSize="14sp"
                android:gravity="center_vertical|center_horizontal"
                android:selectAllOnFocus="true"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:text="00"
                android:ems="3"
                android:id="@+id/abilityConScoreEdit"
                android:layout_weight="1"
                android:textSize="14sp"
                android:gravity="center_vertical|center_horizontal"
                android:selectAllOnFocus="true"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:text="00"
                android:ems="3"
                android:id="@+id/abilityIntScoreEdit"
                android:layout_weight="1"
                android:textSize="14sp"
                android:gravity="center_vertical|center_horizontal"
                android:selectAllOnFocus="true"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:text="00"
                android:ems="3"
                android:id="@+id/abilityWisScoreEdit"
                android:layout_weight="1"
                android:textSize="14sp"
                android:gravity="center_vertical|center_horizontal"
                android:selectAllOnFocus="true"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:text="00"
                android:ems="3"
                android:id="@+id/abilityChaScoreEdit"
                android:layout_weight="1"
                android:textSize="14sp"
                android:gravity="center_vertical|center_horizontal"
                android:selectAllOnFocus="true"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:text="@string/gen_mod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:layout_weight="1"
                android:gravity="center_horizontal" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:text="00"
                android:ems="3"
                android:id="@+id/abilityStrModEdit"
                android:layout_weight="1"
                android:textSize="14sp"
                android:gravity="center_vertical|center_horizontal"
                android:selectAllOnFocus="true"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:text="00"
                android:ems="3"
                android:id="@+id/abilityDexModEdit"
                android:layout_weight="1"
                android:textSize="14sp"
                android:gravity="center_vertical|center_horizontal"
                android:selectAllOnFocus="true"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:text="00"
                android:ems="3"
                android:id="@+id/abilityConModEdit"
                android:layout_weight="1"
                android:textSize="14sp"
                android:gravity="center_vertical|center_horizontal"
                android:selectAllOnFocus="true"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:text="00"
                android:ems="3"
                android:id="@+id/abilityIntModEdit"
                android:layout_weight="1"
                android:textSize="14sp"
                android:gravity="center_vertical|center_horizontal"
                android:selectAllOnFocus="true"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:text="00"
                android:ems="3"
                android:id="@+id/abilityWisModEdit"
                android:layout_weight="1"
                android:textSize="14sp"
                android:gravity="center_vertical|center_horizontal"
                android:selectAllOnFocus="true"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:text="00"
                android:ems="3"
                android:id="@+id/abilityChaModEdit"
                android:layout_weight="1"
                android:textSize="14sp"
                android:gravity="center_vertical|center_horizontal"
                android:selectAllOnFocus="true"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="@string/edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/scoresEditBtn"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>