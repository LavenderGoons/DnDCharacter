<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center"
            android:indeterminate="false"/>

        <android.support.v7.widget.CardView
            android:id="@+id/generalCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:focusableInTouchMode="true">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/abilityHpLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/gen_hp"
                    app:layout_constraintHorizontal_bias="0.529"
                    app:layout_constraintLeft_toLeftOf="@+id/abilityHpEdit"
                    app:layout_constraintRight_toRightOf="@+id/abilityHpEdit"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/abilityNonLethalLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_horizontal"
                    android:text="@string/gen_non_lethal_break"
                    app:layout_constraintLeft_toLeftOf="@+id/abilityNonLethalEdit"
                    app:layout_constraintRight_toRightOf="@+id/abilityNonLethalEdit"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/abilityBaseAtkLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_horizontal"
                    android:text="@string/gen_base_attack_break"
                    app:layout_constraintLeft_toLeftOf="@+id/abilityBaseAtkEdit"
                    app:layout_constraintRight_toRightOf="@+id/abilityBaseAtkEdit"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/abilitySpellResLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_horizontal"
                    android:text="@string/spell_resistance_break"
                    app:layout_constraintHorizontal_bias="0.538"
                    app:layout_constraintLeft_toLeftOf="@+id/abilitySpellResEdit"
                    app:layout_constraintRight_toRightOf="@+id/abilitySpellResEdit"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/abilityInitiativeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/gen_initiative"
                    app:layout_constraintLeft_toLeftOf="@+id/abilityInitiativeEdit"
                    app:layout_constraintRight_toRightOf="@+id/abilityInitiativeEdit"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/abilitySpeedLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/gen_speed"
                    app:layout_constraintLeft_toLeftOf="@+id/abilitySpeedEdit"
                    app:layout_constraintRight_toRightOf="@+id/abilitySpeedEdit"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Margin TOP increase spacing-->
                <EditText
                    android:id="@+id/abilityHpEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:selectAllOnFocus="true"
                    android:ems="2"
                    android:gravity="center_horizontal"
                    android:inputType="number"
                    android:text="00"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/abilityNonLethalEdit"
                    app:layout_constraintTop_toBottomOf="@+id/abilityNonLethalLabel" />

                <EditText
                    android:id="@+id/abilityNonLethalEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="2"
                    android:selectAllOnFocus="true"
                    android:gravity="center_horizontal"
                    android:inputType="number"
                    android:text="00"
