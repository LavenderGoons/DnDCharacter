                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/gen_score"
                    android:layout_marginLeft="0dp"
                    app:layout_constraintLeft_toLeftOf="@+id/abilityNameLabel"
                    app:layout_constraintBottom_toBottomOf="@+id/abilityStrScoreEdit"
