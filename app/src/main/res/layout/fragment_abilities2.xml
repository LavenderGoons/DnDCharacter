                <EditText
                    android:id="@+id/abilityStrScoreEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="2"
                    android:text="00"
                    android:gravity="center_vertical|center_horizontal"
