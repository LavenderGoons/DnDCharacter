                    android:text="@string/ability_con"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/abilityModDex"
                    app:layout_constraintRight_toLeftOf="@+id/abilityModInt" />

                <TextView
                    android:id="@+id/abilityModInt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/ability_int"
