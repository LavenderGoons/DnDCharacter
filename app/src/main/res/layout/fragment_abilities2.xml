                    app:layout_constraintTop_toBottomOf="@+id/abilityModCon"
                    android:layout_marginLeft="0dp"
                    app:layout_constraintLeft_toLeftOf="@+id/abilityModCon"
                    android:layout_marginRight="0dp"
                    app:layout_constraintRight_toRightOf="@+id/abilityModCon"/>

                <EditText
                    android:id="@+id/abilityIntScoreEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="2"
                    android:imeOptions="actionNext"
                    android:gravity="center_vertical|center_horizontal"
                    android:inputType="numberSigned"
                    android:selectAllOnFocus="true"
                    android:text="00"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/abilityModInt"
                    android:layout_marginLeft="0dp"
