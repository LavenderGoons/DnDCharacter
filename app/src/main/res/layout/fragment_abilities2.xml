                    android:text="@string/grapple_misc_mod"
                    app:layout_constraintLeft_toRightOf="@+id/grappleSizeModLabel"
                    app:layout_constraintBottom_toBottomOf="@+id/grappleSizeModLabel"
                    app:layout_constraintRight_toLeftOf="@+id/grappleTotalLabel" />

                <TextView
                    android:id="@+id/grappleTotalLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/hint_total"
                    app:layout_constraintLeft_toRightOf="@+id/grappleMiscModLabel"
                    app:layout_constraintBottom_toBottomOf="@+id/grappleMiscModLabel"
                    app:layout_constraintRight_toRightOf="parent" />

                <!-- Margin TOP increase spacing-->
                <EditText
                    android:id="@+id/grappleBaseAttackEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:ems="2"
                    android:inputType="numberSigned"
                    android:text="00"
                    android:selectAllOnFocus="true"
                    android:layout_marginTop="0dp"
                    app:layout_constraintTop_toBottomOf="@+id/grappleBaseAttackLabel"
                    android:layout_marginLeft="0dp"
                    app:layout_constraintLeft_toLeftOf="@+id/grappleBaseAttackLabel"
                    android:layout_marginRight="0dp"
                    app:layout_constraintRight_toRightOf="@+id/grappleBaseAttackLabel" />


                <EditText
                    android:id="@+id/grappleStrModEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="2"
                    android:imeOptions="actionNext"
                    android:gravity="center_horizontal"
                    android:inputType="numberSigned"
                    android:selectAllOnFocus="true"
                    android:text="00"
                    app:layout_constraintBottom_toBottomOf="@+id/grappleBaseAttackEdit"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="0dp"
                    app:layout_constraintLeft_toLeftOf="@+id/grappleStrModLabel"
                    android:layout_marginRight="0dp"
                    app:layout_constraintRight_toRightOf="@+id/grappleStrModLabel" />

                <EditText
                    android:id="@+id/grappleSizeModEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="2"
                    android:imeOptions="actionNext"
                    android:gravity="center_horizontal"
                    android:inputType="numberSigned"
                    android:selectAllOnFocus="true"
                    android:text="00"
                    android:layout_marginRight="0dp"
                    app:layout_constraintRight_toRightOf="@+id/grappleSizeModLabel"
                    android:layout_marginLeft="0dp"
                    app:layout_constraintLeft_toLeftOf="@+id/grappleSizeModLabel"
                    app:layout_constraintBottom_toBottomOf="@+id/grappleStrModEdit"
                    android:layout_marginBottom="0dp" />

                <EditText
                    android:id="@+id/grappleMiscModEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="2"
                    android:imeOptions="actionNext"
                    android:gravity="center_horizontal"
                    android:inputType="numberSigned"
                    android:selectAllOnFocus="true"
                    android:text="00"
                    android:layout_marginRight="0dp"
                    app:layout_constraintRight_toRightOf="@+id/grappleMiscModLabel"
                    android:layout_marginLeft="0dp"
                    app:layout_constraintLeft_toLeftOf="@+id/grappleMiscModLabel"
                    app:layout_constraintBottom_toBottomOf="@+id/grappleSizeModEdit"
                    android:layout_marginBottom="0dp" />

                <EditText
                    android:id="@+id/grappleTotalEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="2"
                    android:gravity="center_horizontal"
                    android:inputType="numberSigned"
                    android:selectAllOnFocus="true"
                    android:text="00"
                    android:layout_marginRight="0dp"
                    app:layout_constraintRight_toRightOf="@+id/grappleTotalLabel"
                    android:layout_marginLeft="0dp"
                    app:layout_constraintLeft_toLeftOf="@+id/grappleTotalLabel"
                    app:layout_constraintBottom_toBottomOf="@+id/grappleMiscModEdit"
                    android:layout_marginBottom="0dp" />

            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:id="@+id/scoresCard">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/abilityNameLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/hint_name"
