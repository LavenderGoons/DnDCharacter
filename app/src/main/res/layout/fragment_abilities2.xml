                    android:layout_height="wrap_content"
                    android:selectAllOnFocus="true"
                    android:ems="2"
                    android:gravity="center_horizontal"
                    android:inputType="number"
                    android:text="00"
                    app:layout_constraintBottom_toBottomOf="@+id/abilityBaseAtkEdit"
                    app:layout_constraintLeft_toRightOf="@+id/abilityBaseAtkEdit"
                    app:layout_constraintRight_toLeftOf="@+id/abilityInitiativeEdit" />

                <EditText
                    android:id="@+id/abilityInitiativeEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="2"
                    android:gravity="center_horizontal"
                    android:selectAllOnFocus="true"
                    android:inputType="number"
                    android:text="00"
