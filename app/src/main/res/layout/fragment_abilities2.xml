                    app:layout_constraintRight_toLeftOf="@+id/abilitySpeedEdit" />

                <EditText
                    android:id="@+id/abilitySpeedEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="2"
                    android:gravity="center_horizontal"
                    android:selectAllOnFocus="true"
                    android:inputType="number"
                    android:text="00"
                    app:layout_constraintBottom_toBottomOf="@+id/abilityInitiativeEdit"
                    app:layout_constraintLeft_toRightOf="@+id/abilityInitiativeEdit"
                    app:layout_constraintRight_toRightOf="parent" />
            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
