                <TextView
                    android:id="@+id/abilityModWis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/ability_wis"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/abilityModInt"
                    app:layout_constraintRight_toLeftOf="@+id/abilityModCha" />

                <TextView
                    android:id="@+id/abilityModCha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
