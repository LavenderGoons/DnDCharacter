            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="2"
            android:id="@+id/saveDialogReflexMiscEdit"
            android:layout_weight="1"
            android:text="00"
            android:gravity="center_horizontal"
            android:selectAllOnFocus="true"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="2"
            android:id="@+id/saveDialogReflexTempEdit"
            android:layout_weight="1"
            android:text="00"
            android:gravity="center_horizontal"
            android:selectAllOnFocus="true"/>
    </LinearLayout>

    <TextView
        android:text="@string/save_will"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/saveDialogWillLabel" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
