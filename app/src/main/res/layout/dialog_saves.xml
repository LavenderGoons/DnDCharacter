            android:ems="2"
            android:id="@+id/saveDialogFortMiscEdit"
            android:layout_weight="1"
            android:text="00"
            android:gravity="center_horizontal"
            android:selectAllOnFocus="true"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="2"
            android:id="@+id/saveDialogFortTempEdit"
            android:layout_weight="1"
            android:text="00"
            android:gravity="center_horizontal"
            android:selectAllOnFocus="true"/>
    </LinearLayout>

    <TextView
        android:text="@string/save_reflex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/saveDialogReflexLabel" />

    <LinearLayout
        android:orientation="horizontal"
