<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="@string/save_fortitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/saveFortLabel"
                android:layout_marginBottom="@dimen/activity_half_horizontal_margin"/>

            <TextView
                android:text="@string/save_reflex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/saveReflexLabel"
                android:layout_marginBottom="@dimen/activity_half_horizontal_margin"/>

            <TextView
                android:text="@string/save_will"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/saveWillLabel"
                android:layout_marginBottom="@dimen/activity_half_horizontal_margin"/>

            <Button
                android:text="@string/edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/savesEditBtn" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/saveFortValue"
                android:layout_marginBottom="@dimen/activity_half_horizontal_margin"/>

            <TextView
                android:text="00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/saveReflexValue"
                android:layout_marginBottom="@dimen/activity_half_horizontal_margin"/>

            <TextView
                android:text="00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/saveWillValue"
                android:layout_marginBottom="@dimen/activity_half_horizontal_margin"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="@string/ac_gen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/acGenLabel"
                android:layout_marginBottom="@dimen/activity_half_horizontal_margin"/>

            <TextView
                android:text="@string/ac_touch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/acTouchLabel"
                android:layout_marginBottom="@dimen/activity_half_horizontal_margin"/>

            <TextView
                android:text="@string/ac_flat_foot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/acFlatFootLabel"
                android:layout_marginBottom="@dimen/activity_half_horizontal_margin"/>

            <Button
                android:text="@string/edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/acEditBtn" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/acGenValue"
                android:layout_marginBottom="@dimen/activity_half_horizontal_margin"/>

            <TextView
                android:text="00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/acTouchValue"
                android:layout_marginBottom="@dimen/activity_half_horizontal_margin"/>

            <TextView
                android:text="00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/acFlatFootValue"
                android:layout_marginBottom="@dimen/activity_half_horizontal_margin"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:text="@string/grapple_base_attack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/grappleBaseAttackLabel"
                android:layout_weight="1"
                android:gravity="center_vertical"/>

            <TextView
                android:text="@string/grapple_str_mod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/grappleStrModLabel"
                android:layout_weight="1"
                android:gravity="center_vertical"/>

            <TextView
                android:text="@string/grapple_size_mod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/grappleSizeModLabel"
                android:layout_weight="1"
                android:gravity="center_vertical"/>

            <TextView
                android:text="@string/grapple_misc_mod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/grappleMiscModLabel"
                android:layout_weight="1"
                android:gravity="center_vertical"/>

            <TextView
                android:text="@string/hint_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/grappleTotalLabel"
                android:layout_weight="1"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="2"
                android:id="@+id/grappleBaseAttackEdit"
                android:hint="00"
                android:gravity="center_horizontal"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="2"
                android:id="@+id/grappleStrModEdit"
                android:hint="00"
                android:gravity="center_horizontal"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="2"
                android:id="@+id/grappleSizeModEdit"
                android:hint="00"
                android:gravity="center_horizontal"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="2"
                android:id="@+id/grappleMiscModEdit"
                android:hint="00"
                android:gravity="center_horizontal"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="2"
                android:id="@+id/grappleTotalEdit"
                android:hint="00"
                android:gravity="center_horizontal"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>