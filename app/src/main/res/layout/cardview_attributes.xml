<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/cardview_no_corner_radius">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/cardview_half_horizontal_margin"
            android:layout_marginTop="@dimen/cardview_half_vertical_margin"
            android:layout_marginBottom="@dimen/cardview_half_vertical_margin"
            android:layout_marginEnd="@dimen/cardview_half_horizontal_margin">

            <TextView
                android:text="@string/hint_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/attributeNameView" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="@string/hint_name"
                android:ems="8"
                android:layout_below="@+id/attributeNameView"
                android:layout_alignStart="@+id/attributeNameView"
                android:layout_marginTop="@dimen/cardview_half_vertical_margin"
                android:id="@+id/attributeEdit" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>